<div class="uqv-modal" data-universal-quick-view hidden>
  <div class="uqv-modal__backdrop" data-quick-view-backdrop></div>
  <div
    class="uqv-modal__dialog"
    role="dialog"
    aria-modal="true"
    aria-hidden="true"
    tabindex="-1"
    data-quick-view-dialog
  >
    <button
      type="button"
      class="uqv-modal__close"
      data-quick-view-close
      aria-label="{{ 'general.close' | t | default: 'Close' }}"
    >
      <span aria-hidden="true">&times;</span>
    </button>

    <div class="uqv-modal__body">
      <div class="uqv-modal__loader" data-quick-view-loader hidden>
        {{ 'accessibility.loading' | t | default: 'Loading' }}
      </div>
      <div class="uqv-modal__content" data-quick-view-body></div>
      <div class="uqv-modal__feedback" data-quick-view-status role="alert" hidden></div>
    </div>
  </div>
</div>

<style>
  .uqv-modal[hidden] {
    display: none !important;
  }

  .uqv-modal {
    position: fixed;
    inset: 0;
    z-index: 1200;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .uqv-modal__backdrop {
    position: fixed;
    inset: 0;
    background: rgba(22, 22, 22, 0.6);
    backdrop-filter: blur(2px);
  }

  .uqv-modal__dialog {
    position: relative;
    width: min(960px, calc(100vw - 2rem));
    max-height: calc(100vh - 2rem);
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 24px 80px rgba(18, 18, 18, 0.25);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    outline: none;
  }

  .uqv-modal__body {
    position: relative;
    flex: 1;
    overflow: auto;
    padding: 1.5rem;
  }

  .uqv-modal__close {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 2.5rem;
    height: 2.5rem;
    border: none;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.85);
    color: #222;
    font-size: 1.5rem;
    line-height: 1;
    cursor: pointer;
    display: grid;
    place-items: center;
    transition: background 0.2s ease, color 0.2s ease, box-shadow 0.2s ease;
  }

  .uqv-modal__close:hover,
  .uqv-modal__close:focus-visible {
    background: #f5f5f5;
    color: #111;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .uqv-modal__loader {
    font-size: 0.9375rem;
    color: #444;
  }

  .uqv-modal__feedback {
    margin-top: 1rem;
    font-size: 0.9375rem;
    color: #c0392b;
  }

  html.uqv-no-scroll,
  html.uqv-no-scroll body {
    overflow: hidden;
  }

  @media (max-width: 720px) {
    .uqv-modal__dialog {
      width: min(600px, calc(100vw - 1rem));
      max-height: calc(100vh - 1rem);
      border-radius: 12px;
    }

    .uqv-modal__body {
      padding: 1.25rem;
    }

    .uqv-modal__close {
      top: 0.5rem;
      right: 0.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Universal quick view modal",
  "class": "universal-quick-view"
}
{% endschema %}
