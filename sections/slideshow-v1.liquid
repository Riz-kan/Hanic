

<section class='{{ 'xo-section--' | append: section.id }}'>
  <xo-carousel
    xo-render-bullet='<span></span>'
    xo-type='{{ section.settings.carousel_type }}'
    {% if section.settings.autoplay %}
      xo-autoplay='{{ section.settings.autoplay_speed | times: 1000 }}'
    {% endif %}
    xo-speed='{{ section.settings.changing_speed }}'
    xo-loop
    xo-hover-pause
    xo-render-bullet='<span class="slideshow-v1__bullet"></span>'
  >
    <xo-carousel-inner>
      <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
        {% for block in section.blocks %}
          <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
            <div {% render 'slideshow-attr', block: block %}>
              {% render 'slideshow-bg-image', block: block %}
              <xo-container {% render 'section-layout' %}>
                <div
                  style='
                    --height-desktop: {{ section.settings.section_height_desktop }};
                    --height-mobile: {{ section.settings.section_height_mobile }};
                    --pt: {{ section.settings.padding_top }};
                    --pb: {{ section.settings.padding_bottom }};
                  '
                  class='slideshow-v1__content'
                >
                  <div class='slideshow-v1__text'>
                    {%- capture title -%}
                      {%- if block.settings.title != blank -%}
                        <h2 class='slideshow-v1__title' style='--fontsize:{{block.settings.title_font_size}}; --fontweight:{{block.settings.title_font_weight}}'>
                          {{ block.settings.title }}
                        </h2>
                      {%- endif -%}
                    {%- endcapture -%}
                    {%- capture description -%}
                      {%- if block.settings.description != blank -%}
                        <p class='slideshow-v1__description' style='--fontsize:{{block.settings.description_font_size | remove: "rem" }}; --fontweight:{{block.settings.description_font_weight}}'>
                          {{ block.settings.description }}
                        </p>
                      {%- endif -%}
                    {%- endcapture -%}
                    {%- capture button_left -%}
                      {%- if block.settings.button_left_text != blank -%}
                        {% render 'button',
                          text: block.settings.button_left_text,
                          link: block.settings.button_left_link,
                          mode: block.settings.button_left_mode,
                          style: block.settings.button_left_style,
                          size: block.settings.button_left_size,
                          radius: block.settings.button_left_radius,
                          padding: block.settings.button_left_padding
                        %}
                      {%- endif -%}
                    {%- endcapture -%}
                    {%- capture button_right -%}
                      {%- if block.settings.button_right_text != blank -%}
                        {% render 'button',
                          text: block.settings.button_right_text,
                          link: block.settings.button_right_link,
                          mode: block.settings.button_right_mode,
                          style: block.settings.button_right_style,
                          size: block.settings.button_right_size,
                          radius: block.settings.button_right_radius,
                          padding: block.settings.button_right_padding
                        %}
                      {%- endif -%}
                    {%- endcapture -%}

                    {%- render 'animation', content: description, type: block.settings.description_animation, order: 3, duration: '700' -%}
                    {%- render 'animation', content: title, type: block.settings.title_animation, order: 1, duration: '700' -%}
                    <div class='slideshow-v1__buttons'>
                      {%- render 'animation', content: button_left, type: block.settings.button_left_animation, order: 5, duration: '700', strength: 3 -%}
                      {%- render 'animation', content: button_right, type: block.settings.button_right_animation, order: 5, duration: '700', strength: 3 -%}
                    </div>
                  </div>
                  {% if section.settings.show_pagination %}
                    <xo-carousel-pagination class='slideshow-v1__pagination'></xo-carousel-pagination>
                  {% endif %}
                  {% if section.settings.show_navigation %}
                    <div class='slideshow-v1__arrows'>
                      <xo-carousel-prev class='slideshow-v1__arrow-btn'
                        ><button>{% render 'icon', name: 'arrow-left' %}</button></xo-carousel-prev
                      >
                      <xo-carousel-next class='slideshow-v1__arrow-btn'
                        ><button>{% render 'icon', name: 'arrow-right' %}</button></xo-carousel-next
                      >
                    </div>
                  {% endif %}
                </div>
              </xo-container>
            </div>
          </xo-carousel-slide>
        {% endfor %}
      </xo-carousel-list>
    </xo-carousel-inner>
  </xo-carousel>
</section>

