

{% capture breakpoints %}
  {% if section.settings.limit >= 5 %}
    xo-breakpoints='
    {
      1200: {
        perView: {{ section.settings.limit | minus: 1}},
      },
      992: {
        perView: {{ section.settings.limit | minus: 2}},
      },
      576: {
        perView: 2,
      },
    }
    '
  {% else %}
    xo-breakpoints='
    {
      992: {
        perView: 3,
      },
      576: {
        perView: 2,
      },
    }
    '
  {% endif %}
{% endcapture %}

<section {% render 'section-attr' %}>
  <xo-container {% render 'section-layout' %}>
    <div class='instagram-v2__heading'>
      <div class='instagram-v2__icon__heading'>
        {%- render 'image', image: section.settings.icon_heading -%}
      </div>
      {%- if section.settings.title != blank -%}
        <xo-animate xo-cascade>
          <h2 class='instagram-v2__title'>{{ section.settings.title }}</h2>
        </xo-animate>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <xo-animate xo-cascade class='instagram-v2__description'>
          {{ section.settings.description }}
        </xo-animate>
      {%- endif -%}
    </div>
    <xo-animate xo-cascade>
      <xo-instagram
        xo-open-mode='{{ section.settings.open_mode }}'
        xo-access-token='{{section.settings.access_token}}'
        style='--gap:{{section.settings.gap}}px'
      >
        <xo-carousel
          xo-per-view='{{ section.settings.limit }}'
          xo-loop
          xo-speed='2000'
          xo-hover-pause='true'
          class='ins2-xo-carousel'
          {% if section.settings.auto_play %}
            xo-autoplay='5000'
          {% endif %}
          {{ breakpoints }}
        >
          <xo-carousel-inner>
            <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}' class='instagram-v2__list'>
              {% if section.settings.access_token == blank %}
                {% assign slide_forloop = section.settings.limit | plus: 1 %}
                {% for i in (1..slide_forloop) %}
                  <xo-carousel-slide
                    aria-roledescription='{{ 'sections.slideshow.slide' | t }}'
                    aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'
                  >
                    <div class='instagram-v2__item'>
                      <img
                        src='{{ 'instagram' | append: i | append: '.jpg' | file_img_url: 'master' }}'
                        class='instagram-v2__image'
                        alt='instagram'
                        is='xo-lazyload'
                        loading='lazy'
                        width='1000'
                        height='1000'
                      >
                      <a href='https://www.instagram.com/' class='instagram-v2__image-layer' target='_blank'>
                        {{ section.settings.icon_image }}
                      </a>
                    </div>
                  </xo-carousel-slide>
                {% endfor %}
              {% else %}
                <xo-instagram-template>
                  <img class='instagram-v2__image' data-src='{ url }' alt='instagram' width='1000' height='1000' is='xo-lazyload' loading='lazy'>
                  <span class='instagram-v2__image-layer'>{{ section.settings.icon_image }}</span>
                </xo-instagram-template>
              {% endif %}
            </xo-carousel-list>
          </xo-carousel-inner>
        </xo-carousel>
      </xo-instagram>
    </xo-animate>
  </xo-container>
</section>

