

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    {%- if section.settings.title != blank -%}
      <xo-animate xo-cascade>
        <h2 class='collection-v1__title'>{{ section.settings.title }}</h2>
      </xo-animate>
    {%- endif -%}
    <xo-grid
      style='--xs: 1; --md: 2; --xl: {{ section.settings.columns_limit }};--xo-grid-col-gap: {{ section.settings.gap }}px; --xo-grid-row-gap: {{ section.settings.gap }}px;'
      class='collection-v1__grid'
    >
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          {% assign image = block.settings.image %}
        {% else %}
          {% assign image = block.settings.collection.featured_image %}
        {% endif %}
        <xo-animate xo-cascade class='collection-v1__item'>
          <a href='{{ block.settings.collection.url }}' class='{% render 'hover-style' %}'>
            {% render 'image', image: image, media_aspect_ratio: section.settings.aspect_ratio %}
          </a>
          <div class='collection-v1__content'>
            <h3 class='collection-v1__item-title'>{{ block.settings.collection.title | escape }}</h3>
            <div class='collection-v1__button'>
              {% render 'button',
                text: section.settings.button_text,
                link: block.settings.collection.url,
                mode: section.settings.button_mode,
                style: section.settings.button_style,
                size: section.settings.button_size,
                radius: section.settings.button_radius,
                padding: section.settings.button_padding
              %}
            </div>
          </div>
        </xo-animate>
      {% endfor %}
    </xo-grid>
  </xo-container>
</section>

