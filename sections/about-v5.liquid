

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <div class='about-v5'>
      <xo-animate xo-cascade class='about-v5__icon'>
        {% if section.settings.svg != empty %}
          {{ section.settings.svg }}
        {% else %}
          {% render 'image', image: section.settings.image_icon %}
        {% endif %}
      </xo-animate>
      <xo-animate xo-cascade>
        <h2 class='about-v5__title'>
          {{ section.settings.title }}
        </h2>
      </xo-animate>
    </div>
  </xo-container>
</section>

