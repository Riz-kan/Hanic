

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-carousel
      {% if section.settings.auto_play %}
        xo-autoplay='5000'
      {% endif %}
      xo-rewind
      xo-gap='30'
      xo-speed='200'
      xo-render-bullet='<span></span>'
      class='testimonial-v2__crs'
    >
      <xo-carousel-inner>
        <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
          {% for block in section.blocks %}
            <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
              <div class='testimonial-v2__item'>
                {% if block.settings.testimonial %}
                  <div class='testimonial-v2__testimonial'>{{ block.settings.testimonial }}</div>
                {% endif %}
                {%- if block.settings.stars > 0 -%}
                  <ul role='list' class='testimonial-v2__list-star'>
                    {% for i in (1..block.settings.stars) %}
                      <li>{% render 'icon', name: 'star', icon_size: '20', color: '#fda002' %}</li>
                    {% endfor %}
                  </ul>
                {%- endif -%}
                <div class='testimonial-v2__avatar'>
                  {% render 'image', image: block.settings.avatar %}
                </div>
                <div class='testimonial-v2__customer'>
                  {% if block.settings.name_customer %}
                    <div class='testimonial-v2__name'>{{ block.settings.name_customer }}</div>
                    <span></span>
                  {% endif %}
                  {% if block.settings.position %}
                    <div class='testimonial-v2__position'>{{ block.settings.position }}</div>
                  {% endif %}
                </div>
              </div>
            </xo-carousel-slide>
          {% endfor %}
        </xo-carousel-list>
      </xo-carousel-inner>
      {% render 'carousel-pagination-style3', class: 'testimonial-v2__pagination' %}
    </xo-carousel>
  </xo-container>
</section>

