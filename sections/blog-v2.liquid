

{% capture breakpoints %}
  {% if section.settings.columns_limit >= 4 %}
    xo-breakpoints='
    {
      1200: {
        perView: {{ section.settings.columns_limit | minus: 1}},
      },
      992: {
        perView: {{ section.settings.columns_limit | minus: 2}},
      },
      768: {
        perView: 2,
      },
      576: {
        perView: 1,
      },
    }
    '
  {% else %}
    xo-breakpoints='
    {
      768: {
        perView: 2,
      },
      576: {
        perView: 1,
      },
    }
    '
  {% endif %}
{% endcapture %}

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-animate xo-cascade>
      <div class='blog-v2__title'>{{ section.settings.title }}</div>
      <div class='blog-v2__subtitle'>{{ section.settings.subtitle }}</div>
    </xo-animate>
    <xo-carousel
      xo-per-view='{{ section.settings.columns_limit }}'
      xo-gap='{{ section.settings.gap }}'
      xo-speed='400'
      {% if section.settings.auto_play %}
        xo-autoplay='5000'
      {% endif %}
      {{ breakpoints }}
      xo-render-bullet='<span></span>'
      style='--radius: {{ section.settings.radius }}%'
    >
      <xo-carousel-inner>
        <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
          {% for article in section.settings.blog.articles limit: section.settings.articles_limit %}
            {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
            {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
            <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
              {%- if article and article != empty -%}
                <xo-animate xo-cascade class='blog-v2__item'>
                  <a href='{{ article.url }}' class='{% render 'hover-style' %} blog-v2__item__link'>
                    {% render 'image', image: article.image, media_aspect_ratio: section.settings.aspect_ratio %}
                  </a>
                  <div class='blog-v2__date'>
                    {{ article.published_at | time_tag: format: 'date' }}
                  </div>
                  <a href='{{ article.url }}'>
                    <div class='blog-v2__item-title'>
                      {{ article.title | truncate: 50 | escape }}
                    </div>
                  </a>
                  <div class='blog-v2__description'>{{ article.excerpt | strip_html | truncatewords: 30 }}</div>
                  <div class='blog-v2__button'>
                    {% render 'button',
                      text: section.settings.button_text,
                      link: article.url,
                      mode: section.settings.button_mode,
                      style: section.settings.button_style,
                      size: section.settings.button_size,
                      radius: section.settings.button_radius,
                      padding: section.settings.button_padding
                    %}
                  </div>
                </xo-animate>
              {%- else -%}
                <xo-animate xo-cascade>
                  {% render 'article-card-placeholder', placeholder_image: placeholder_image %}
                </xo-animate>
              {%- endif -%}
            </xo-carousel-slide>
          {% endfor %}
        </xo-carousel-list>
      </xo-carousel-inner>
      <div class='blog-v2__arrows'>
        {% render 'carousel-navigation-style3' %}
      </div>
      {% render 'carousel-pagination-style3', class: 'blog-v2__pagination' %}
    </xo-carousel>
  </xo-container>
</section>

