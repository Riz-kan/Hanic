

<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    {%- if section.settings.title != blank -%}
      <xo-animate xo-cascade class='banner-v2__heading'>
        <div class='banner-v2__title-wrap'>
          <h2 class='banner-v2__title'>{{ section.settings.title }}</h2>
        </div>
        {%- if section.settings.subtitle != blank -%}
          <h3 class='banner-v2__subtitle'>{{ section.settings.subtitle }}</h3>
        {%- endif -%}
      </xo-animate>
    {%- endif -%}
    <div style='--gap: {{ section.settings.gap }}px;' class='banner-v2__grid{% if section.settings.reverse_layout %} banner-v2__grid--reverse{% endif %}'>
      <a href='{{ section.settings.image1_url }}' class='banner-v2__item banner-v2__item1'>
        {%- render 'image', image: section.settings.image1 -%}
        <div class='bannerv2__text bannerv2__text1'>{{ section.settings.text1 }}</div>
      </a>
      <a href='{{ section.settings.image2_url }}' class='banner-v2__item banner-v2__item2'>
        {%- render 'image', image: section.settings.image2 -%}
        <div class='bannerv2__text bannerv2__text2'>{{ section.settings.text2 }}</div>
      </a>
      <a href='{{ section.settings.image3_url }}' class='banner-v2__item banner-v2__item3'>
        {%- render 'image', image: section.settings.image3 -%}
        <div class='bannerv2__text bannerv2__text3'>{{ section.settings.text3 }}</div>
      </a>
    </div>
  </xo-container>
</div>

