

<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-animate xo-cascade>
    <div class='banner-v7__item'>
      <a class='banner-v7__img-link' href='{{ section.settings.link_banner }}'>
        {% render 'image', image: section.settings.img_banner %}
      </a>
      <div class='banner-v7__text'>
        <xo-container
          {% render 'section-layout' %}
        >
          <h3 class='banner-v7__title'>{{ section.settings.title }}</h3>
          <h3 class='banner-v7__description'>{{ section.settings.title_small }}</h3>
        </xo-container>
      </div>
    </div>
  </xo-animate>
</div>

{% schema %}
{
